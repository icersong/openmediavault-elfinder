set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

PHP_FPM_POOL_DIR=/etc/php/7.3/fpm/pool.d
ELFINDER_POOL_CONF="${PHP_FPM_POOL_DIR}/openmediavault-elfinder-site.conf"
USERNAME="elfinder"

if [ -e "${ELFINDER_POOL_CONF}" ]; then
    rm ${ELFINDER_POOL_CONF}
fi

cat <<EOF > "${ELFINDER_POOL_CONF}"
[openmediavault-elfinder]
listen = /run/php/php7.3-fpm-openmediavault-elfinder.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0600

user = ${USERNAME}
group = users

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

php_value[post_max_size] = 2000M
php_value[upload_max_filesize] = 2000M

EOF

exit 0
